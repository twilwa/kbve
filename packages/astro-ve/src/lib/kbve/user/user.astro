---
export interface Props {
	widget?: string;
	data?: string;
	avatar?: string;
}
const { widget, data, avatar } = Astro.props;
import UserMenu from './UserMenu.svelte';
---

<button
	type="button"
	class="flex mr-3 text-sm bg-kbve-menu-primary rounded-full md:mr-0 focus:ring-4 focus:ring-kbve"
	id="user-menu-button"
	aria-expanded="false"
	data-dropdown-toggle="user-dropdown"
	data-dropdown-placement="bottom">
	<span class="sr-only">Open Drawer</span>
	<img
		class="w-8 h-8 rounded-full hover:scale-110"
		src={avatar}
		alt="user photo"
	/>
</button>

<!-- Dropdown menu -->
<div
	class="z-50 hidden my-4 text-base list-none divide-y rounded-lg shadow bg-kbve-menu-primary divide-zinc-600"
	id="user-dropdown">

	<UserMenu client:only="svelte" />
	<slot />

</div>
