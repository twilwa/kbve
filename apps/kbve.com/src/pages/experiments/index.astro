---
import Layout from '../../layouts/Layout.astro';
// import { AstroVe as VE } from '@kbve/astro-ve';
import { getCollection } from 'astro:content';


let title = "KBVE Tools: Unleash Your Digital Potential";
let description = 
    'Discover the ultimate toolkit at KBVE Tools, where gaming meets development, and endless possibilities await! Our platform offers an extensive collection of tools designed to enhance your gaming experience, streamline your development projects, and explore a wide range of digital adventures. From cutting-edge software to innovative utilities, KBVE Tools is your go-to destination for elevating your online world.';

const experiments = await getCollection('experiments');
---
<Layout title={title} description={description}>
    <section class="flex flex-col gap-2 mx-auto w-full justify-around">

      <div class="flex justify-left flex-col">
        <h1 class="md:text-4xl text-5xl font-extrabold bg-gradient-to-r text-white from-cyan-200 via-blue-200 to-pink-200 bg-clip-text text-transparent">
          Experiments
        </h1>
        <p class="text-white font-semibold md:text-lg">
          For our more Open-Minded pursuits.
        </p>
      </div>

      {experiments.map(experiment => 
        <a href={experiment.collection + '/' + experiment.slug} class="flex grow bg-zinc-950 border border-cyan-200 rounded-2xl p-4">  
          <div class="flex items-center grow">
            <div class="flex-shrink-0 ml-3">
              <span class="text-2xl font-bold leading-none text-gray-200 sm:text-3xl">{experiment.data.title}</span>
              <h3 class="text-base font-normal text-gray-200">{experiment.data.description}</h3>
            </div>
            <div class="flex flex-1 justify-end items-center ml-5 w-0 text-base font-bold text-teal-500">
              Last Updated {new Date(experiment.data.timestamp * 1000).toLocaleDateString("en-US")}
            </div>
          </div>
        </a>
      )}
    
    </section>
</Layout>