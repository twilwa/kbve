---
import Layout from '../layouts/Layout.astro';
import { AstroVe as VE } from '@kbve/astro-ve';
let title = 'Dice Panda';
let description = 'Dice Roller';
---

<Layout title={title} description={description}>
	<main class="md:p-8 overflow-hidden">
		<div
			class="grid gap-4 grid-flow-row-dense grid-rows-3 md:grid-cols-2 xl:grid-cols-4 2xl:grid-cols-8 3xl:grid-cols-12">
			<section
				class="p-4 sm:p-6 bg-gray-800 border border-gray-700 rounded-lg shadow-sm 2xl:col-span-4 text-kbve-primary transition ease-in-out hover:scale-110">
			</section>

			<section
				class="p-4 sm:p-6 bg-gray-800 border border-gray-700 rounded-lg shadow-sm 2xl:col-span-4 text-kbve-primary transition ease-in-out hover:scale-105">
				<!-- component -->
				<article
					class="flex transition hover:shadow-xl bg-gray-900 shadow-gray-800/25">
					<div class="rotate-180 p-2 [writing-mode:_vertical-lr]">
						<time
							datetime="2023-12-21"
							class="flex items-center justify-between gap-4 text-xs font-bold uppercase text-white">
							<span>2023</span>
							<span class="w-px flex-1 bg-white/10"></span>
							<span>Dec 12</span>
						</time>
					</div>

					<div class="hidden sm:block sm:basis-56">
						<img
							alt="Guitar"
							src="https://images.unsplash.com/photo-1614767629805-3bbcf6e26c7d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80"
							class="aspect-square h-full w-full object-cover"
						/>
					</div>

					<div class="flex flex-1 flex-col justify-between">
						<div
							class="border-s p-4 border-white/10 sm:!border-l-transparent sm:p-6">
							<a href="#">
								<h3 class="font-bold uppercase text-white">
									Dice Roller Proof of Concept
								</h3>
							</a>

							<p
								class="mt-2 line-clamp-3 text-sm/relaxed text-gray-200">
								Collection of interesting dice rolls for test casing some animation libraries.
							</p>
                            <div class="object-contain -h-12 w-48">
                                <dotlottie-player
                                    autoplay
                                    loop
                                    mode="normal"
                                    src="/assets/json/lottie/dice2.lottie"
                                ></dotlottie-player>
                            </div>
						</div>

						<div class="sm:flex sm:items-end sm:justify-end">
							<a
								href="#/dice"
								class="block bg-purple-800 px-5 py-3 text-center text-xs font-bold uppercase text-kbve-primary transition hover:bg-zinc-500">
								Roll Dice
							</a>
						</div>
					</div>
				</article>

				<article class="pt-8">
					<!-- Concept -->
					<a
						href="#/"
						class="group relative block h-64 sm:h-80 lg:h-96">
						<span
							class="absolute inset-0 border-2 border-dashed border-black">
						</span>

						<div
							class="relative flex h-full transform items-end border-2 border-black bg-zinc-800 transition-transform group-hover:-translate-x-2 group-hover:-translate-y-2">
							<div
								class="p-4 !pt-0 transition-opacity group-hover:absolute group-hover:opacity-0 sm:p-6 lg:p-8">
								
                                <div class="object-contain -h-12 w-48">
                                    <dotlottie-player
                                        autoplay
                                        loop
                                        mode="normal"
                                        src="/assets/json/lottie/dice.lottie"
                                    ></dotlottie-player>
                                </div>
                                
                               

                                

								<h2
									class="mt-4 text-xl font-medium sm:text-2xl">
									Spin 2 Win! Dice
								</h2>
							</div>

							<div
								class="absolute p-4 opacity-0 transition-opacity group-hover:relative group-hover:opacity-100 sm:p-6 lg:p-8">
								<h3
									class="mt-4 text-xl font-medium sm:text-2xl">
									Go around the world
								</h3>

								<p class="mt-4 text-sm sm:text-base">
									Lorem ipsum dolor sit amet consectetur
									adipisicing elit. Cupiditate, praesentium
									voluptatem omnis atque culpa repellendus.
								</p>

								<p class="mt-8 font-bold">Read more</p>
							</div>
						</div>
					</a>
				</article>
			</section>
		</div>
	</main>
</Layout>
